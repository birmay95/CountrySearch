<configuration>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>/home/mishail/IdeaProjects/CountrySearch/logfile.log</file>
        <encoder>
            <pattern>%date{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.mishail.country_search.aspect" level="INFO">
        <appender-ref ref="FILE"/>
    </logger>

    <root level="INFO">
        <appender-ref ref="FILE"/>
    </root>
</configuration>
